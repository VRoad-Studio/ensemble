<div class="student-edit mb-5 ">
  <%= simple_form_for [@student] do |form| %>
    <div class='d-flex'>
      <h3>Prénom de l'élève :</h3>
      <%= form.input :first_name, label: false, input_html: { class: 'area grow ms-3', required: "true" } %>
    </div>
    <%= form.input :classroom,
                    input_html: { value: @classroom.id, class: 'hidden' },
                    label: false%>
    <%= form.submit "Valider", class: "area  btn-valid" %>
  <% end %>
</div>
